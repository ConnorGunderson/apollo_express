{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "outDir": "build",
    "rootDir": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
